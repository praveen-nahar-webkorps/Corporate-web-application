<div class="col-lg-12">

<div class="row text-danger mt-5 mb-4"><h1><%= flash[:notice]%></h1></div>

    <div class="card rounded-0 mt-5 mb-4 bg-primary text-white">
        <div class="card-body ">
        <h1 class="text-center">Employee Documents</h1>
        </div>
    </div>

    <%= link_to "Create New Employee Document", new_document_path,class: "btn btn-primary btn-lg mb-4"%>

    <table class="table table-bordered">
        <thead >
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Doc Type</th>
                <th>Employee Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @documents.each do |d| %>
                <tr>
                    <td> <%= d.id%> </td>
                    <td> <%= d.name%> </td>
                    <td> <%= d.doc_type%> </td>
                    <td> <%= link_to d.employee.full_name,employee_path(d.employee)%> </td>
                    <td> 


                        <!-- Example single danger button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Action
                            </button>
                            <ul class="dropdown-menu">
                                <li><%= link_to "Edit", edit_document_path(d), class: 'dropdown-item bg-outline-primary border' %></li>
                                <li><a href="/documents/<%= d.id %>" class="dropdown-item bg-outline-info border">Show</a></li>
                                <li><%= link_to "Delete", document_path(d), class: "dropdown-item bg-outline-danger ",method: :delete, data: { confirm: 'Are you sure to delete this Document ? '}%></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Separated link</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>